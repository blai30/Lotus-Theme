<idea-plugin>
    <id>com.blai30.lotus.theme</id>
    <name>Lotus Theme</name>
    <vendor url="https://www.bhlai.com">blai30</vendor>

    <description><![CDATA[
    <h1>Lotus Theme Plugin</h1>

    <img src="/resources/screenshots/dark.png">
    <img src="/resources/screenshots/light.png">

    <h2>A theme pack with pastel font colors for the JetBrains platform.</h2>
    <hr />

    Includes a dark theme and light theme.
    <ul>
        <li>Lotus Dark</li>
        <li>Lotus Light</li>
    </ul>
    <hr />
    <br />

    <h3>This theme includes colors for Rainbow Brackets.</h3>
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <!-- Theme plugins are only supported since version 2019.1 -->
    <idea-version since-build="191.0"/>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <themeProvider id="c3f84cf4-72fb-49ac-bd03-9f47a41115a4" path="/themes/Lotus_Dark.theme.json"/>
        <themeProvider id="40b6d5e5-c8b1-4d60-bcb1-c3a747c1d46b" path="/themes/Lotus_Light.theme.json"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>
